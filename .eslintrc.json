{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "next"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    // "react" Eliminamos react de ac√° porque estaba agregando un error de lint
  ],
  "rules": {
    "react/prop-types": 0, // Desactivando error lint de prop validation
    "no-unused-vars": "off",
    "global-require": 0,
    "react/jsx-key": "off"
  },
  "settings": {
    "react": {
      "version": "detect" // React version. "detect" automatically picks the version you have installed
    }
  },
  "globals": {
    "$": true,
    "require": true, // Desactivando error lint de require
    "process": true
  }
}